    "components": {
        "schemas": {
            "Category": {
                "title": "Category",
                "description": "Category model",
                "required": [
                    "category_id",
                    "category_name",
                    "status"
                ],
                "properties": {
                    "category_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "category_name": {
                        "type": "string",
                        "example": "Electronics"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "active",
                            "deleted"
                        ],
                        "example": "active"
                    },
                    "products": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Category"
                        }
                    }
                },
                "type": "object"
            },
            "Product": {
                "title": "Product",
                "description": "Product model",
                "required": [
                    "product_id",
                    "category_id",
                    "department_id",
                    "manufacturer_id",
                    "product_number",
                    "regular_price",
                    "status"
                ],
                "properties": {
                    "product_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "category_id": {
                        "type": "integer",
                        "example": 10
                    },
                    "department_id": {
                        "type": "integer",
                        "example": 3
                    },
                    "manufacturer_id": {
                        "type": "integer",
                        "example": 5
                    },
                    "product_number": {
                        "type": "string",
                        "example": "123456"
                    },
                    "sku": {
                        "type": "string",
                        "example": "987654",
                        "nullable": true
                    },
                    "upc": {
                        "type": "string",
                        "example": "123456789012",
                        "nullable": true
                    },
                    "regular_price": {
                        "type": "number",
                        "format": "float",
                        "example": 999.99
                    },
                    "sale_price": {
                        "type": "number",
                        "format": "float",
                        "example": 799.99,
                        "nullable": true
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "active",
                            "deleted"
                        ],
                        "example": "active"
                    }
                },
                "type": "object"
            }
        }
    },
