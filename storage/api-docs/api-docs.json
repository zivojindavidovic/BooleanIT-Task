        "/categories/{categoryId}/products/export": {
            "get": {
                "tags": [
                    "Categories"
                ],
                "summary": "Export category products as CSV",
                "description": "Exports all products in a given category as a downloadable CSV file.",
                "operationId": "f01e552f2db61b224570b223c765bc02",
                "parameters": [
                    {
                        "name": "categoryId",
                        "in": "path",
                        "description": "Category ID",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "CSV file download",
                        "headers": {
                            "Content-Disposition": {
                                "description": "attachment; filename=category_products.csv",
                                "schema": {
                                    "type": "string",
                                    "example": "attachment; filename=category_products.csv"
                                }
                            }
                        },
                        "content": {
                            "text/csv": {
                                "schema": {
                                    "type": "string",
                                    "format": "binary"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Category not found"
                    }
                }
            }
        },
